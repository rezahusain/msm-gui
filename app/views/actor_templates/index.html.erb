<h1>
  List of all actors
</h1>

<hr>
<form action="/insert_actor" method="post">
  <div>
    <label for="name_id">
      Name
    </label>
    <input type="text" id="name_id" name="actor_name">
  </div>
  <div>
    <label for="dob_id">
      Dob
    </label>
    <input type="date" id="dob_id" name="actor_dob">
  </div>
  <div>
    <label for="bio_id">
      Bio
    </label>
    <textarea id="bio_id" name="actor_bio" rows="3"></textarea>
  <div>
    <label for="image_id">
      Image
    </label>
    <input type="url" id="image_id" name="actor_image">
  </div>
  <button>Create actor</button>
</form>
<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_actors.each do |an_actor| %>
  <tr>
    <td>
      <%= an_actor.id %>
    </td>

    <td>
      <img src="<%= an_actor.image %>" style="width:250px;">
    </td>

    <td>
      <%= an_actor.name %>
    </td>

    <td>
      <%= an_actor.dob %>
    </td>

    <td>
      <a href="/actors/<%= an_actor.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
